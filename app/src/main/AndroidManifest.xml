<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nieves.fernando.saulshop">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CatalogoActivity"
            android:label="@string/title_activity_catalogo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDetalleCliente"
            android:label="@string/title_activity_detalle_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientesActivity2"
            android:label="@string/title_activity_clientes2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityDetallesProducto"
            android:label="@string/title_activity_detalles_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitySimpleScanner"
            android:label="@string/title_activity_simple_scanner"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrarProducto"
            android:label="@string/title_activity_registrar_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrarCliente"
            android:label="@string/title_activity_registrar_cliente"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>